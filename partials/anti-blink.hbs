<script>
    (() => {
      const p = document.cookie.split("; ").find((l) => l.startsWith("darkmode-preferred="))?.split("=")[1];
      const d = p === "true" || (p !== "false" && window.matchMedia("(prefers-color-scheme:dark)").matches);
      document.documentElement.classList.toggle('dark', d);
    })();
</script>
